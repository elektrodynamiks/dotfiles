{
  "[cpp]": {
    "editor.defaultFormatter": "bladnman.auto-align"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[erb]": {
    "editor.defaultFormatter": "mbessey.vscode-rufo",
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[ruby]": {
    "editor.defaultFormatter": "misogi.ruby-rubocop", // Use the Ruby LSP as the default formatter
    "editor.formatOnSave": true, // Format files automatically when saving
    "editor.formatOnType": true,
    "editor.insertSpaces": true, // Use spaces and not tabs for indentantion
    "editor.rulers": [120], // Enable formatting while typing
    "editor.semanticHighlighting.enabled": true, // Enable semantic highlighting
    "editor.tabSize": 2, // Use 2 spaces for indentation
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true
  },
  "editor.accessibilitySupport": "off",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.cursorStyle": "block-outline",
  "editor.experimentalWhitespaceRendering": "font",
  "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.linkedEditing": true,
  "editor.matchBrackets": "near",
  "editor.renderLineHighlight": "gutter",
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.renderWhitespace": "boundary",
  "editor.semanticHighlighting.enabled": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  /* Excluded file types */
  "emptyIndent.exclude": [".md"],
  /* Highlight indent color */
  "emptyIndent.highlightColor": "rgba(246,36,89,0.6)",
  /* Highlight indent on empty lines */
  "emptyIndent.highlightIndent": false,
  /* Automatically remove indentation in empty lines on save */
  "emptyIndent.removeIndent": true,
  "eslint.alwaysShowStatus": false,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.options": {
    "parser": "@babel/eslint-parser"
  },
  "eslint.validate": ["javascript"],
  "files.associations": {
    "*.html.erb": "erb"
  },
  "focus.highlightRange": "none",
  "git.openRepositoryInParentFolders": "always",
  "indentRainbow.colors": [
    "rgba(24, 78, 119,0.15)",
    "rgba(30, 96, 145,0.15)",
    "rgba(26, 117, 159, 0.15)",
    "rgba(22, 138, 173,0.15)",
    "rgba(52, 160, 164,0.15)",
    "rgba(82, 182, 154,0.15)",
    "rgba(82, 182, 154,0.1)",
    "rgba(82, 182, 154,0.05)",
    "rgba(82, 182, 154,0.025)"
  ],
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "redhat.telemetry.enabled": true,
  "ruby.linter.run": "onSave",
  "rubyLsp.formatter": "auto",
  "rubyLsp.rubyVersionManager": "rbenv",
  // Comments
  "security.workspace.trust.untrustedFiles": "newWindow",
  "terminal.explorerKind": "both",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.fontFamily": "Fira Code",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.lineHeight": 1.1,
  // Themes Icons & Workbench
  "themeSwitcher.day": "GitHub Sharp Redux",
  "themeSwitcher.night": "Ocean Eyes Dark",
  "workbench.colorTheme": "Ultimate White",
  "workbench.iconTheme": "fira-code-material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.tree.renderIndentGuides": "always"
}
